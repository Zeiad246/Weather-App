<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.LocationFragment"
    >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/hour_card_design"
            android:gravity="center"
            android:orientation="vertical"
            app:cardCornerRadius="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:orientation="horizontal"
                app:cardCornerRadius="16sp">

                <TextView
                    android:id="@+id/CityBox"
                    android:layout_width="191dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:layout_margin="2dp"
                    android:background="@drawable/edittextoutline"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="City"
                    android:inputType="textPersonName"
                    android:textColor="@color/black"
                    android:textColorHint="@color/greyer"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/CountryBox"
                    android:layout_width="187dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:layout_margin="2dp"
                    android:background="@drawable/edittextoutline"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="Country"
                    android:inputType="textPersonName"
                    android:textColor="@color/black"
                    android:textColorHint="@color/greyer"
                    android:textSize="15sp" />

            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>

