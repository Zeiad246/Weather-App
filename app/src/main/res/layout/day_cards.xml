<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    >


    <androidx.cardview.widget.CardView
        android:id="@+id/DayCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:background="@android:color/transparent"
        android:foregroundGravity="top"
        app:cardCornerRadius="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        card_view:cardBackgroundColor="@android:color/transparent"
        card_view:cardElevation="0dp">

        <LinearLayout
            android:layout_width="388dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/hour_card_design"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="388dp"
                android:layout_height="61dp"
                android:background="@android:color/transparent"
                android:gravity="center">

                <TextView
                    android:id="@+id/dayDate"
                    android:layout_width="102dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="14sp">

                </TextView>

                <!--                <ImageView-->
                <!--                    android:id="@+id/dayImage"-->
                <!--                    android:layout_width="50dp"-->
                <!--                    android:layout_height="50dp"-->

                <!--                    >-->

                <!--                </ImageView>-->

                <TextView
                    android:id="@+id/dayHighTemp"
                    android:layout_width="68dp"
                    android:layout_height="48dp"

                    android:gravity="center"
                    android:text="20°"
                    android:textColor="@color/white"
                    android:textSize="25sp">

                </TextView>

                <!--                <TextView-->
                <!--                    android:id="@+id/dayCondition"-->
                <!--                    android:layout_width="116dp"-->
                <!--                    android:layout_height="30dp"-->
                <!--                    android:textColor="@color/white"-->
                <!--                    android:textSize="20sp" />-->

                <TextView
                    android:id="@+id/dayLowTemp"
                    android:layout_width="75dp"
                    android:layout_height="46dp"
                    android:gravity="center"
                    android:text="20°"
                    android:textColor="@color/white"
                    android:textSize="25sp">

                </TextView>

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/childrecyclerview"
                android:layout_width="375dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/backgournd_radius"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                card_view:listitem="@layout/hour_cards" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>