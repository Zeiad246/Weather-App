<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HourActivity"
    android:background="@drawable/gradient">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="261dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="385dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/hoursLowestTemp"
            android:layout_width="match_parent"
            android:layout_height="202dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="13°"
            android:textColor="@color/white"
            android:textSize="100sp" />

        <TextView
            android:id="@+id/hoursHighestTemp"
            android:layout_width="match_parent"
            android:layout_height="132dp"
            android:gravity="center"
            android:text="20°"
            android:textColor="@color/white"
            android:textSize="50sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="401dp"
        android:layout_height="309dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="380dp"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="67dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView22"
                android:layout_width="196dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="Humidity"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/textView32"
                android:layout_width="197dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="Pressure"
                android:textColor="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="103dp">

            <TextView
                android:id="@+id/hoursHumidBox"
                android:layout_width="196dp"
                android:layout_height="103dp"
                android:gravity="center"
                android:text="TextView"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/hoursPressureBox"
                android:layout_width="197dp"
                android:layout_height="103dp"
                android:gravity="center"
                android:text="TextView"
                android:textColor="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="392dp"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="196dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="Visibility"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/textView42"
                android:layout_width="197dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="Rain"
                android:textColor="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/hoursVisibilityBox"
                android:layout_width="196dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="TextView"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/hoursRainBox"
                android:layout_width="197dp"
                android:layout_height="121dp"
                android:gravity="center"
                android:text="TextView"
                android:textColor="@color/white" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>